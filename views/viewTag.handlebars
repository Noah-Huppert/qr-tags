<!DOCTYPE HTML>
<html>
  <head>
    <title>View Tag - {{ data.tag.prettyName }}</title>

    <!-- Jquery -->
    <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

    <!-- Load polyfill support -->
    <script src="{{ site.url }}bower_components/platform/platform.js"></script>

    <!-- Load Polymer Elements -->
    <link href="//fonts.googleapis.com/css?family=RobotoDraft:regular,bold,italic,thin,light,bolditalic,black,medium&amp;lang=en" rel="stylesheet" type="text/css">

    <!-- Custom JS -->
    <script src="{{ site.url }}js/qrcode.js"></script>
    <script src="{{ site.url }}js/qr-tag.js"></script>

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="{{ site.url }}css/qr-tag.css">
  </head>

  <body>

    <div id="tagName">{{ data.tag.prettyName }}</div>
    <div id="smallTagName">{{ data.tag.prettyName }}</div>

    <div id="qrContainer" data-url="{{ site.url }}tag/{{ data.tag.tagId }}">

    </div>

    <div id="info">
      {{#each data.tag.display}}
        <div class="name">{{name}}:</div> <div class="value">{{value}}</div>
      {{/each}}
    </div>

    <script>
      var tagElement = $('#qrContainer');
      var tagUrl = tagElement.attr('data-url');

      new QRCode(document.getElementById("qrContainer"), tagUrl);
    </script>
  </body>
</html>
